    $(document).ready(function() {
        var trigger = $('.hamburger'),
            overlay = $('.overlay'),
            isClosed = false;

        trigger.click(function() {
            hamburger_cross();
        });

        function hamburger_cross() {
            if(isClosed == true) {
                overlay.hide();
                trigger.removeClass('is-open');
                trigger.addClass('is-closed');
                isClosed = false;
            } else {
                overlay.show();
                trigger.removeClass('is-closed');
                trigger.addClass('is-open');
                isClosed = true;
            }
        }
        $("#referenceBtn").click(function () {
            alert($("#touxiang").val()) ;
        })
        $('[data-toggle="offcanvas"]').click(function() {
            $('#wrapper').toggleClass('toggled');
        });
        $('#lesson-manage-btn').click(function(){
            $("#lesson-manage").show();
            $("#lesson-manage").siblings().hide();
        });
        $('.dropdown li').click(function(){
            $('#resource-upload').show();
            $("#resource-upload").siblings().hide();
//            $("#sidebar-wrapper").hide();
        });
        $('#notion-message-btn').click(function(){
            $("#notion-message").show();
            $('#notion-message').siblings().hide();
//            $("#sidebar-wrapper").hide();
        });
        $("#teacher-manager-btn").click(function () {
            $("#teacher-manager").show();
            $("#teacher-manager").siblings().hide();
        })



        //获取val
        $("#manageSubmitBtn").click(function () {
            console.log("提交！");
            $.get("/updataLesson",{
                "dengluming":$("#teacher_name").val(),
                "lessonTitle":$("#lesson_name").val(),
                "lessonDetail":$("#lesson_detail").val(),
                "lessonLevel":$("#lesson_level").val(),
                "lessonPopulation":$("#student_number").val(),
                "lessonPath":$("#lesson_url").val()
            },function (result) {
                if(result=="1"){
                    alert("提交成功！，将自动跳转到首页");
//                    window.location = "/";
                }else{
                    alert("提交失败！，将自动跳转到首页");
//                    window.location = "/";
                }
            })
        });

        //上传通知
        $("#notionSubmit").click(function () {
            console.log("提交通知");
            $.get("/addNotion",{
                "notionContent":$("#notionContent").val(),
            },function (result) {
                console.log(result);
                if(result=="1"){
                    $("#cuowukuang").fadeIn();
//                    window.location = "/";
                }else{
                    $("#cuowukuang").fadeIn();
                    $("#cuowukuang").html("提交失败");
//                    window.location = "/";
                }
            })
        });
        //$(selector).get(url,data,success(response,status,xhr),dataType)
        //jQuery.post(url,data,success(data, textStatus, jqXHR),dataType)

    });
</script>
