    <script type="text/javascript" src="js/bootstrap.min.js" ></script>
</head>

<body>
<div id="wrapper">
    <div class="overlay"></div>
    <!-- Sidebar -->
    <nav class="navbar navbar-inverse navbar-fixed-top" id="sidebar-wrapper" role="navigation">
        <ul class="nav sidebar-nav">
            <li class="sidebar-brand">
                <a href="#">
                  管理员：  <%= username %>
                </a>
            </li>
            <li>
                <a href="#"><i class="fa fa-fw fa-home"></i> 管理员信息</a>
            </li>
            <li id="notion-message-btn">
                <a href="#"><i class="fa fa-fw fa-folder"></i> 系统通知</a>
            </li>
            <li id="teacher-manager-btn">
                <a href="#"><i class="fa fa-fw fa-file-o"></i> 教师管理</a>
            </li>
            <li id="lesson-manage-btn">
                <a href="#"><i class="fa fa-fw fa-cog"></i> 课程管理</a>
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-fw fa-plus"></i> 资料上传<span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                    <li class="dropdown-header"></li>
                    <li>
                        <a href="#">图片上传</a>
                    </li>
                    <li>
                        <a href="#">Word文件上传</a>
                    </li>
                    <li>
                        <a href="#">Excel文件上传</a>
                    </li>
                    <li>
                        <a href="#">Powerpoint文件上传</a>
                    </li>
                    <li>
                        <a href="#">压缩包上传</a>
                    </li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="page-content-wrapper">
        <button type="button" class="hamburger is-closed animated fadeInLeft" data-toggle="offcanvas">
            <span class="hamb-top"></span>
            <span class="hamb-middle"></span>
            <span class="hamb-bottom"></span>
        </button>
        <div class="container">
            <div id="lesson-manage" style="display: none;">
                <form>
                    <div class="form-group">
                        <label for="exampleInputEmail1">教师名称</label>
                        <input type="text" class="form-control" id="teacher_name" placeholder="Teacher Name">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">课程名称</label>
                        <input type="text" class="form-control" id="lesson_name" placeholder="Lesson Name">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">课程简介</label>
                        <input type="text" class="form-control" id="lesson_detail" placeholder="Lesson Detail">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">课程难度</label>
                        <input type="text" class="form-control" id="lesson_level" placeholder="Lesson Level">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">课程学习人数</label>
                        <input type="text" class="form-control" id="student_number" placeholder="Student Number">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">课程视频链接</label>
                        <input type="text" class="form-control" id="lesson_url" placeholder="Lesson_url">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputFile">视频上传</label>
                        <input type="file">
                        <p class="help-block">所录制的视频在这里上传</p>
                    </div>
                    <button type="submit" id="manageSubmitBtn" class="btn btn-default">提交</button>
                </form>
            </div>
            <div id="resource-upload" style="display: none;">
                <form  action="/upImg" method="post" enctype="multipart/form-data" >
                    <div class="form-group">
                        <label for="username">上传资料</label>
                        <input type="file" class="form-control" id="touxiang" name="touxiang">
                    </div>
                    <button type="submit" class="btn btn-default" >上传</button>
                </form>
            </div>
            <div id="notion-message" >
                <form>
                    <div class="form-group">
                        <label for="exampleInputEmail1">系统消息</label>
                        <input type="text" class="form-control" id="notionContent" placeholder="Information">
                    </div>
                    <button type="submit"  class="btn btn-primary" id="notionSubmit">提交</button>
                    <div class="alert alert-success" role="alert" id="cuowukuang" style="display: none">
                        提交成功！
                    </div>
                </form>
            </div>
            <div id="teacher-manager" style="display: none;" >
                <form>
                    <div class="form-group">
                        <label for="exampleInputEmail1">暂无教师信息</label>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
//    $("#file-1").fileinput({
